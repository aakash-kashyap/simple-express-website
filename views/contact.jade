extends layout

block content

    .container 
        form(method="post", action="contact/send")
            h1.headline Contact Us
            .form-group
                label Name
                input.form-control(type="text", name="name", placeholder="John Doe")
            .form-group
                label Email
                input.form-control(type="email", name="email", placeholder="johndoe@email.com")    
            .form-group
                label Message
                textarea.form-control(name="message", placeholder="Enter Your Mesaage here..." rows=5)
            button.btn.btn-default.btn-lg(type="submit") Submit
